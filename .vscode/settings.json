{
  // #region editor ------------------------------------------------------------
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    // "source.sortImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // #endregion ----------------------------------------------------------------
  // #region explorer ----------------------------------------------------------
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*",
    "README.md": ".editorconfig, .eslint*, eslint*, .prettier*, prettier*",
    "vite.config.*": ".git*, jsconfig*, vitest.config.*",
  },
  // #endregion ----------------------------------------------------------------
  // #region - extensions - Vue - Official -------------------------------------
  "vue.autoInsert.dotValue": true,
  // #endregion ----------------------------------------------------------------
  // #region - extensions - Code Spell Checker ---------------------------------
  "cSpell.words": [
    "axios",
    "pinia",
    "unplugin",
  ],
  // #endregion ----------------------------------------------------------------
}
